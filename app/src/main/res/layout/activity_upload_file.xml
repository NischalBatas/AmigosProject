<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ik1"
    tools:context=".UploadFile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/a"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:fontFamily="sans-serif-black"
            android:text="Contact us"
            android:textColor="@color/colorPrimaryDarks"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="MyAmigos"
            android:textColor="@color/colorPrimaryDarks"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Choose the image"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="91dp" />

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        android:hint="ImageName" />

    <Button
        android:id="@+id/b1"
        android:layout_width="214dp"
        android:layout_height="64dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/dsecond"
        android:text="Choose Image" />

    <Button
        android:id="@+id/b2"
        android:layout_width="194dp"
        android:layout_height="61dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="390dp"
        android:background="#3CB371"
        android:text="Upload" />

    <EditText
        android:id="@+id/eid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="10dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="10dp"
        android:hint="Message" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:fontFamily="sans-serif"
        android:text="Note: If any customer wants new product which is not available in the app, can request new product by adding the product image.  If the product is avaliable in the app, the admin will contact the customer through given email.  Please type the correct email." />

</RelativeLayout>